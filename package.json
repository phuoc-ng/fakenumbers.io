{
    "name": "@phuocng/fakenumbers.io",
    "description": "The official website of FakeNumbers",
    "scripts": {
        "copy": "rimraf dist && mkdir dist && cp -rf public/* dist",
        "dev": "npm run copy && webpack --mode development",
        "dev-server": "npm run copy && webpack-dev-server",
        "build": "npm run copy && webpack --mode production && npm run export",
        "export": "react-snap",
        "deploy": "npm run build && netlify deploy --dir=dist --prod",
        "lint": "tslint -c tslint.json -o tslint.log 'client/**/*.{ts,tsx}'"
    },
    "dependencies": {
        "@phuocng/fake-numbers": "^1.4.2",
        "highlight.js": "^10.1.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-helmet": "^5.2.1",
        "react-router-dom": "^5.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@babel/preset-env": "^7.8.3",
        "@babel/preset-react": "^7.7.4",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "@types/react-helmet": "^5.0.15",
        "@types/react-router-dom": "^5.1.3",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.4.2",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.9.0",
        "postcss-loader": "^3.0.0",
        "react-snap": "^1.23.0",
        "rimraf": "^3.0.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.1.3",
        "tailwindcss": "^1.1.4",
        "ts-loader": "^6.2.1",
        "tslint": "^5.20.1",
        "tslint-react": "^4.1.0",
        "typescript": "^3.7.5",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.10.1"
    },
    "reactSnap": {
        "source": "dist",
        "minifyHtml": {
            "collapseWhitespace": false,
            "removeComments": false
        }
    }
}
